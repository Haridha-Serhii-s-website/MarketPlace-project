<section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;">
          <div class="card-header px-4 py-5">
            <h5 class="text-muted mb-0">Please confirm your order,
              <span style="color: #4aabe9;">{{orderDetails.firstName}}</span>!</h5>
          </div>
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0" style="color: #4aabe9;">Receipt</p>
              <form method="POST" action="/orders/{{orderDetails._id}}/my-orders">
                  <button class="small text-danger mb-0 btn "  style="font-size:small" type="submit" >Delete order</button></a>
